<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="14sp">

    <TextView
        android:id="@+id/pm_eqp_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Equipamento: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pm_data_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pm_eqp_tx"
        android:text="Local: " />

    <TextView
        android:id="@+id/ec_dum_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pm_data_txt"
        android:text="Ultima Manutenção: " />

    <TextView
        android:id="@+id/eq_period_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ec_dum_tx"
        android:text="Periodicidade: " />

    <TextView
        android:id="@+id/eqp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pm_eqp_tx"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pm_eqp_tx"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pm_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pm_eqp_tx"
        android:layout_toEndOf="@+id/pm_data_txt" />

    <TextView
        android:id="@+id/ec_dum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pm_data"
        android:layout_toEndOf="@+id/ec_dum_tx" />

    <TextView
        android:id="@+id/ec_qtde"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ec_dum_tx"
        android:layout_toEndOf="@+id/eq_period_tx" />

    <TextView
        android:id="@+id/ec_dma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ec_dum_tx"
        android:layout_toEndOf="@+id/ec_qtde"
        android:text=" " />

</RelativeLayout>