<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textSize="14sp">

    <TextView
        android:id="@+id/pm_eqp_tx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Equipamento: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pm_data_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/pm_eqp_tx"
        android:text="PrÃ³xima Manut: " />

    <TextView
        android:id="@+id/pm_eqp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/pm_eqp_tx"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/pm_eqp_tx"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pm_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pm_eqp_tx"
        android:layout_toEndOf="@+id/pm_data_txt" />

</RelativeLayout>